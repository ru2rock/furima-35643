<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>
  <div class="Account__info">
    <h2>ユーザー情報</h2>
  </div>
  <div class="AccountPage__form">
    <%= form_for(current_user) do |f| %>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :nickname %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :nickname %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__email">
          <%= f.label :email %>
        </div>
        <div class="FormField__email">
          <%= f.email_field :email %>
        </div>
        <br>
      </div>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :first_name %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :first_name, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :first_name_kana %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :last_name %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :last_name, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :last_name_kana %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :last_name_kana, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :birthday %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :birthday, autofocus: true %>
        </div>
      </div>
      <%= f.submit "更新する" %>
    <% end %>
    <br>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
    <br>
    <%= link_to "商品一覧へ戻る", root_path%>
  </div>
</div>
